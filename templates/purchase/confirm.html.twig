
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .confirm-container {
            max-width: 600px;
            margin: 60px auto;
            background: white;
            border-radius: 20px;
            padding: 40px;
            font-family: 'Quicksand', sans-serif;
        }
        .confirm-header {
            font-size: 2rem;
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
        }
        .confirm-details {
            font-size: 1.1rem;
            margin-bottom: 20px;
        }
        .btn-confirm {
            background-color: #6D28D9;
            color: white;
            font-weight: bold;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
        }
        .btn-confirm:hover {
            background-color: #5b21b6;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="confirm-container">
        <h2 class="confirm-header">Confirm Purchase</h2>

        <div class="confirm-details">
            <p><strong>Festival:</strong> {{ festival.nume }}</p>
            <p><strong>Location:</strong> {{ festival.locatie }}</p>
            <p><strong>Date:</strong> {{ festival.startDate|date('d-m-Y') }} - {{ festival.endDate|date('d-m-Y') }}</p>
            <p><strong>Price:</strong> {{ festival.price }} lei</p>
        </div>
        <form method="GET" action="{{ path('app_purchase_create', {'festival_id': festival.id}) }}" onsubmit="return validateQuantity()">
            <div class="form-group">
                <label for="quantity"><strong>Number of Tickets:</strong></label>
                <input type="number"
                       id="quantity"
                       name="quantity"
                       class="form-control"
                       min="1"
                       max="{{ festival.numberTickets }}"
                       value="1"
                       required
                       onchange="updateTotalPrice({{ festival.price }})">
                <p id="totalPrice"><strong>Total:</strong> {{ festival.price }} lei</p>
            </div>
            <button type="submit" class="btn btn-confirm d-block mx-auto">Confirm Purchase</button>
        </form>
        <script>
            function updateTotalPrice(pricePerTicket) {
                const quantity = document.getElementById('quantity').value;
                const total = quantity * pricePerTicket;
                document.getElementById('totalPrice').innerHTML = `<strong>Total:</strong> ${total} lei`;
            }

            function validateQuantity() {
                const quantity = parseInt(document.getElementById('quantity').value);
                const maxTickets = parseInt({{ festival.numberTickets }});

                if (quantity < 1) {
                    alert('Please select at least 1 ticket');
                    return false;
                }

                if (quantity > maxTickets) {
                    alert(`Only ${maxTickets} tickets available`);
                    return false;
                }

                return true;
            }
        </script>
    </div>
{% endblock %}
