
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .confirm-container {
            max-width: 600px;
            margin: 60px auto;
            background: white;
            border-radius: 20px;
            padding: 40px;
            font-family: 'Quicksand', sans-serif;
        }
        .confirm-header {
            font-size: 2rem;
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
        }
        .confirm-details {
            font-size: 1.1rem;
            margin-bottom: 20px;
        }
        .btn-confirm {
            background-color: #6D28D9;
            color: white;
            font-weight: bold;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
        }
        .btn-confirm:hover {
            background-color: #5b21b6;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="confirm-container">
        <h2 class="confirm-header">Confirm Purchase</h2>

        <div class="confirm-details">
            <p><strong>Festival:</strong> {{ festival.nume }}</p>
            <p><strong>Location:</strong> {{ festival.locatie }}</p>
            <p><strong>Date:</strong> {{ festival.startDate|date('d-m-Y') }} - {{ festival.endDate|date('d-m-Y') }}</p>
            <p><strong>Price:</strong> {{ festival.price }} lei</p>
        </div>

        <form method="GET" action="{{ path('app_purchase_create', {'festival_id': festival.id}) }}">
            <button type="submit" class="btn btn-confirm d-block mx-auto">Confirm</button>
        </form>
    </div>
{% endblock %}
