{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Quicksand', sans-serif;
        }
        .festival-container {
            max-width: 800px;
            margin: 40px auto;
            background: white;
            border-radius: 25px;
            padding: 50px;
            position: relative;
        }
        .festival-header {
            color: #6D28D9;
            font-weight: 700;
            margin-bottom: 25px;
            text-align: center;
            font-size: 2.5rem;
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 15px;
        }
        .festival-details {
            margin-bottom: 30px;
        }
        .detail-row {
            display: flex;
            margin-bottom: 10px;
            padding: 10px;
            background: #f9f9f9;
            border-radius: 5px;
        }
        .detail-label {
            font-weight: 600;
            min-width: 120px;
            color: #555;
        }
        .artists-section {
            margin: 30px 0;
        }
        .artists-list {
            list-style: none;
            padding: 0;
        }
        .artists-list li {
            padding: 12px 15px;
            margin-bottom: 8px;
            background: #f0f0f0;
            border-radius: 5px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .no-artists {
            font-style: normal;
            color: #888;
            text-align: center;
            padding: 20px;
            background: #f9f9f9;
            border-radius: 5px;
        }
        .btn-primary {
            background-color: #6D28D9;
            border: none;
            padding: 10px 20px;
            font-weight: 600;
            margin-right: 10px;
            margin-bottom: 10px;
        }
        .btn-primary:hover {
            background-color: #5b21b6;
        }

        .action-buttons {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 30px;
            gap: 10px;
        }
        .price-badge {
            background-color: #6D28D9;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: bold;
            font-size: 1.1rem;
        }
    </style>
{% endblock %}
<body>
<h1>{{ purchase.user.email }}</h1>
<p> Festival: {{ purchase.festival.nume}}</p>
<a href="{{ path('app_festival_index') }}">Back to festival</a>


<form method="post" action="{{ path('app_purchase_delete', {'id': purchase.id}) }}">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
</body>
