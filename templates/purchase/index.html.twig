
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">
    <style>
        .title{
            font-family: 'Quicksand', sans-serif;
            font-weight: 800;
            font-size: 72px;
            text-align: left;
        }
        .purchase-card {
            background: white;
            border-radius: 25px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            transition: transform 0.3s ease;
        }
        .purchase-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.1);
        }
        .purchase-header {
            color: #6D28D9;
            font-weight: 700;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }
        .detail-row {
            display: flex;
            margin-bottom: 12px;
            padding: 10px;
            background: #f9f9f9;
            border-radius: 5px;
        }
        .detail-label {
            font-weight: 600;
            min-width: 100px;
            color: #555;
        }
        .no-purchases {
            padding: 30px;
            text-align: center;
            background: #f9f9f9;
            border-radius: 5px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="title">Total</h1>

        <div class="row">
            {% for purchase in purchases %}
                <div class="col-md-6 mb-4">

                    <div class="purchase-card clickable-card"  onclick="window.location='{{ path('app_user_details_show', {id: purchase.user.id}) }}'"
                    style="cursor: pointer">

                        <h3 class="purchase-header">Purchase {{ purchase.id }}</h3>
                        <div class="festival-details">
                            <div class="detail-row">
                                <span class="detail-label">User:</span>
                                <span>{{  purchase.user.email }}</span>
                            </div>

                            <div class="detail-row">
                                <span class="detail-label">Festival:</span>
                                <span>{{ purchase.festival.nume}}</span>
                            </div>

                            <div class="detail-row">
                                <span class="detail-label">Purchase Date: </span>
                                <span>{{ purchase.purchaseDate|date('Y-m-d') }}</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Start Date:</span>
                                <span>{{ purchase.festival.startDate|date('Y-m-d') }}</span>
                            </div>
                        </div>


                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="no-purchases">
                        <h4>No purchases found</h4>
                        <p class="text-muted">You haven't made any purchases yet</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
