{% extends 'base.html.twig' %}


{% block stylesheets %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">

    <style>
        .body{
            background-image: url("https://i.pinimg.com/736x/c6/f6/91/c6f691da74c3b637435b1e14099edc49.jpg");
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height:  100vh;
            padding: 20px;
        }
        .title{
            font-family: 'Quicksand', sans-serif;
            font-weight: 800;
            font-size: 72px;
            text-align: center;
            transform: rotate(-2deg);
        }
        .widgetArtistListHero{
            width: 100%;
            display:flex;
            justify-content: center;
            align-items: center;
            position: relative;
            gap: 68px;
            padding: 38px 16px 8px;
        }
        widget-root *{
            box-sizing: border-box;
        }
        .artist-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 30px;
            max-width: 1200px;
            margin: 0 auto;
        }
        .artist-card {
            width: 200px;
            height: 250px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            border: 3px solid transparent;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-end;
            padding-bottom: 20px;
            position: relative;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px;

        }
        .artist-card:hover {
            transform: translateY(-10px);
            /*box-shadow: 0 3px 2px rgba(0, 0, 0, 0.3);*/
        }
        .artist-card a {
            color: inherit;
            text-decoration: none;
        }
        .artist-image{
            width:100px;
            height:100%;
            object-fit: cover;
            position: absolute;
            top: 0;
            left:0;
            z-index: -1;
            opacity: 0.8;
        }

        .artist-name{
            font-family: 'Quicksand', sans-serif;
            font-weight: 700;
            font-size: 22px;
            color: white;
            text-transform: uppercase;
            text-align: left;
            padding: 0 10px;
            margin-bottom: 10px;
        }

        .add-artist-btn {
            display: block;
            margin: 40px auto;
            padding: 12px 35px;
            font-size: 18px;
            font-weight: bold;
            background-color: rgba(255, 255, 255, 0.2);
            border: 2px solid white;
            color: white;
            transition: all 0.3s ease;
        }
        .add-artist-btn:hover {
            background-color: rgba(255, 255, 255, 0.4);
        }
        .artist-name {
            font-size: 18px;
        }
        .title {
            font-size: 48px;
        }

    </style>
{% endblock %}

 {%  block body %}
     <div class="body">
         <h1 class="title">Lineup</h1>

         <div class="artist-container">
             {% for artist in artists %}
                 <div class="artist-card">
                     <a href="{{ path('app_artist_show', {id: artist.id}) }}">
                         {% if artist.imageFile %}
                             <img src="{{ artist.imageFile }}" alt="{{ artist.nume }}" class="artist-image">
                         {% else %}
                             <img src="https://via.placeholder.com/200x250/333/cccccc?text=NO+IMAGE" alt="No image" class="artist-image">
                         {% endif %}
                         <div class="artist-name">{{ artist.nume }}</div>
                     </a>
                 </div>
             {% else %}
                 <div class="artist-card">
                     <div class="artist-name">No artists found</div>
                 </div>
             {% endfor %}
         </div>

         {% if is_granted('ROLE_ADMIN') %}
             <button type="button" class="btn add-artist-btn" onclick="window.location.href='{{ path('app_artist_add_new') }}'">
                 Add artist
             </button>
         {% endif %}
     </div>
{% endblock %}
