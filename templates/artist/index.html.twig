{% extends 'base.html.twig' %}


{% block stylesheets %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">

    <style>
        .body{
            background-image: url("https://i.pinimg.com/736x/c6/f6/91/c6f691da74c3b637435b1e14099edc49.jpg");
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height:  100vh;
            padding: 20px;
        }
        .title{
            font-family: 'Quicksand', sans-serif;
            font-weight: 800;
            font-size: 100px;
            text-align: center;
            transform: rotate(-2deg);
        }
        /*.widgetArtistListHero{*/
        /*    width: 100%;*/
        /*    display:flex;*/
        /*    justify-content: center;*/
        /*    align-items: center;*/
        /*    position: relative;*/
        /*    gap: 68px;*/
        /*    padding: 38px 16px 8px;*/
        /*}*/
        /*widget-root *{*/
        /*    box-sizing: border-box;*/
        /*}*/
        .artist-container {
            display:flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 20px;
            max-width: 100%;
            padding: 38px 16px 8px;
            box-sizing: border-box;
        }
        .artist-card {
            height: 400px;
            flex: 0 0 calc(33.33% - 30px);
            max-width: calc(33.33% - 30px);
            border: 50px;
            border-radius: 15px;
            overflow: hidden;
            position: relative;
            display: flex;
            align-items: flex-end;
            justify-content: center;
            padding: 20px;
            background: rgba(255,255,255,0.1);
            box-shadow: 0 4px 15px;

        }
        .artist-card:hover {
            /*transform: translateY(-10px); so it doesn't move*/
        }
        .artist-card a {
            color: inherit;
            text-decoration: none;
        }
        .artist-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 0;
            opacity: 0.81; /* how much a picture is visible */
        }

        .artist-name {
            font-family: 'Quicksand', sans-serif;
            font-weight: 700;
            font-size: 22px;
            color: white;
            text-transform: uppercase;
            text-align: left;
            z-index: 1;
            position: relative;
            padding: 10px 15px;
            border-radius: 25px;
            outline: black  10px;
        }

        .btn-primary {
            display: inline-block;
            outline: none;
            cursor: pointer;
            font-size: 14px;
            line-height: 1;
            border-radius: 500px;
            border: 1px solid transparent;
            letter-spacing: 2px;
            min-width: 160px;
            text-transform: uppercase;
            white-space: normal;
            font-weight: 700;
            text-align: center;
            padding: 16px 14px 18px;
            color: black;
            background-color: #C0C9EE;
            height: 50px;
            margin: 40px auto 0;
            position: relative;
            top: 70%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
        }

        .artist-name {
            font-size: 18px;
        }
        .title {
            font-size: 55px;
        }
        .pagination {
            display: flex;
            margin-top: 30px;
            gap: 2px;
        }

    </style>
{% endblock %}

 {%  block body %}
     <div class="body">
         <h1 class="title">Lineup</h1>
         <div class="artist-container">
             {% for artist in artists %}
                 <div class="artist-card">
                     <a href="{{ path('app_artist_show', {id: artist.id}) }}">
                         {% if artist.imageFile %}
                             <img src="{{ asset('uploads/artists/' ~ artist.imageFile) }}" alt="{{ artist.nume }}" class="artist-image">
                         {% else %}
                             <img src="https://via.placeholder.com/200x250/333/cccccc?text=NO+IMAGE" alt="No image" class="artist-image">
                         {% endif %}
                     </a>
                     <div class="artist-name">{{ artist.nume }}</div>
                 </div>
             {% else %}
                 <div class="artist-card">
                     <div class="artist-name">No artists found</div>
                 </div>
             {% endfor %}
         </div>

         {% if is_granted('ROLE_ADMIN') %}
             <button type="button" class="btn btn-primary" onclick="window.location.href='{{ path('app_artist_add_new') }}'">
                 Add artist
             </button>
         {% endif %}

         <div class="pagination">
             {{ knp_pagination_render(pagination) }}
         </div>
     </div>
{% endblock %}
