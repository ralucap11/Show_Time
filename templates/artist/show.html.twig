{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .body {
            background-image: url("https://i.pinimg.com/736x/c6/f6/91/c6f691da74c3b637435b1e14099edc49.jpg");
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;
            padding-bottom: 60px;
            margin: 0;
            background-repeat: no-repeat;
            position: relative;
        }

        .artist-show-container {
            padding: 30px;
           position: relative;
            text-align: center;
            top: 150px;
        }

        .artist-card {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 25px;
            padding: 40px 30px;
            margin-bottom: 40px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            border: 1px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(5px);
            transform-style: preserve-3d;
            transition: all 0.4s ease;
        }

        .artist-name {
            font-family: 'Quicksand', sans-serif;
            color: black;
            font-weight: 700;
            margin-bottom: 25px;
            text-align: center;
            font-size: 2.5rem;
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 15px;
        }

        .artist-genre {
            font-family: 'Quicksand', sans-serif;
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 30px;
            color: black;
            background: rgba(192, 201, 238, 0.2);
            display: inline-block;
            padding: 8px 20px;
            border-radius: 50px;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 40px;
            flex-wrap: wrap;
        }

        .btn-back {
            display: inline-block;
            outline: none;
            cursor: pointer;
            font-size: 14px;
            line-height: 1;
            border-radius: 500px;
            transition: all 0.3s ease;
            border: 2px solid #C0C9EE;
            letter-spacing: 2px;
            min-width: 180px;
            text-transform: uppercase;
            white-space: normal;
            font-weight: 700;
            text-align: center;
            padding: 16px 14px 18px;
            color: #2c3e50;
            background-color: transparent;
            text-decoration: none;
        }



        .btn-danger {
            display: inline-block;
            outline: none;
            cursor: pointer;
            font-size: 14px;
            line-height: 1;
            border-radius: 500px;
            transition: all 0.3s ease;
            border: 2px solid #C0C9EE;
            letter-spacing: 2px;
            min-width: 180px;
            text-transform: uppercase;
            white-space: normal;
            font-weight: 700;
            text-align: center;
            padding: 16px 14px 18px;
            color: white;
            background-color: #C0C9EE;
        }


        @media (max-width: 576px) {
            .artist-name {
                font-size: 2.5rem;
            }
            .artist-genre {
                font-size: 1.4rem;
            }
            .action-buttons {
                flex-direction: column;
                gap: 15px;
            }
            .btn-back, .btn-danger {
                width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="body">
        <div class="artist-show-container">
            <div class="artist-card">
                <h1 class="artist-name">{{ artist.nume }}</h1>
                <p class="artist-genre">Genre: {{ artist.genMuzical }}</p>

                <div class="action-buttons">
                    <a href="{{ path('app_artist_index') }}" class="btn-back">Back to Lineup</a>

                    {% if is_granted('ROLE_ADMIN') %}
                        <form method="get" action="{{ path('app_artist_delete', {'id': artist.id}) }}" style="display: inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn-danger">Delete Artist</button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
