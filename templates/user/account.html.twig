{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Quicksand', sans-serif;
            background-image: url("https://i.pinimg.com/736x/c6/f6/91/c6f691da74c3b637435b1e14099edc49.jpg");
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;
        }
        .account-container {
            max-width: 800px;
            margin: 140px auto 50px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 30px;
            padding: 50px;
            position: relative;
            backdrop-filter: blur(5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }
        .account-header {
            color: black;
            font-weight: 700;
            margin-bottom: 25px;
            text-align: center;
            font-size: 2.5rem;
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 20px;
        }
        .detail-row {
            display: flex;
            margin-bottom: 10px;
            padding: 15px;
            background: #f0f0f0;
            border-radius: 10px;
            align-items: center;
        }
        .detail-label {
            font-weight: 600;
            min-width: 120px;
            color: #555;
        }
        .detail-value {
            flex-grow: 1;
        }


    </style>
{% endblock %}

{% block body %}
    <div class="account-container">
        <h1 class="account-header">My Account</h1>

        <div class="account-details">
            <div class="detail-row">
                <span class="detail-label">Email:</span>
                <span class="detail-value">{{ user.email }}</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Name:</span>
                <span class="detail-value">{{ user.userDetails.name|default('N/A') }}</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Role:</span>
                <span class="detail-value ">{{ user.userDetails.rol|default('N/A') }}</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Age:</span>
                <span class="detail-value">{{ user.userDetails.varsta|default('N/A') }}</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">ID:</span>
                <span class="detail-value ">{{ user.id }}</span>
            </div>
        </div>


    </div>
{% endblock %}
