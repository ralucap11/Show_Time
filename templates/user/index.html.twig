{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Quicksand', sans-serif;
            background-image: url("https://i.pinimg.com/736x/c6/f6/91/c6f691da74c3b637435b1e14099edc49.jpg");
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;
            padding-bottom: 100px;
        }

        .btn-primary {
            display: inline-block;
            outline: none;
            cursor: pointer;
            font-size: 14px;
            line-height: 1;
            border-radius: 500px;
            transition-property: background-color, border-color, color, box-shadow, filter;
            transition-duration: .3s;
            border: 1px solid transparent;
            letter-spacing: 2px;
            min-width: 160px;
            text-transform: uppercase;
            white-space: normal;
            font-weight: 700;
            text-align: center;
            padding: 16px 14px 18px;
            color: black;
            background-color: #C0C9EE;
            height: 50px;
            margin: 30px auto;
            display: block;
        }

        .title {
            font-family: 'Quicksand', sans-serif;
            font-weight: 800;
            font-size: 72px;
            text-align: center;
            transform: rotate(-2deg);
            color: black;
            margin-top: 5px;
            margin-bottom: 50px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }

        .navigation {
            text-align: center;
            margin-top: 50px;
            font-family: 'Quicksand', sans-serif;

        }

        .users-container {
            background-color: rgba(255, 255, 255, 0.85);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            margin: 0 auto;
        }

        .table {
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
        }

        .table thead th {
            background-color: #C0C9EE;
            color: black;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            border: none;
        }

        .table tbody tr {
            transition: all 0.2s ease;
        }

        .table tbody tr:hover {
            background-color: rgba(192, 201, 238, 0.2);
        }

        .table tbody td {
            vertical-align: middle;
            border-color: rgba(0,0,0,0.05);
        }

        .user-link {
            color: #4a4a4a;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.2s;
        }


        .no-users {
            text-align: center;
            padding: 20px;
            color: #6c757d;
            font-style: italic;
        }
    </style>
{% endblock %}

{% block body %}
    <body class="body">
    <h1 class="title">Users</h1>

    <div class="users-container">
        {% if users|length > 0 %}
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Email</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>
                            <a class="user-link" href="{{ path('app_user_details_show', {id: user.id}) }}">
                                {{ user.email }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('app_user_details_show', {id: user.id}) }}" class="btn btn-sm btn-outline-primary">
                                View Details
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="no-users">No users found</div>
        {% endif %}

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>

        {% if is_granted('ROLE_ADMIN') %}
            <button type="button" class="btn-primary" onclick="window.location.href='{{ path('app_user_add_new') }}'">Add user</button>
        {% endif %}
    </div>
    </body>
{% endblock %}
