{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('styles.css') }}">
    <style>
        .body{
            background-image: url("{{ asset('images/festival_background.png') }}");
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height:  100vh;
        }
        .btn-primary {
            display: inline-block;
            outline: none;
            cursor: pointer;
            font-size: 14px;
            line-height: 1;
            border-radius: 500px;
            transition-property: background-color, border-color, color, box-shadow, filter;
            transition-duration: .3s;
            border: 1px solid transparent;
            letter-spacing: 2px;
            min-width: 160px;
            text-transform: uppercase;
            white-space: normal;
            font-weight: 700;
            text-align: center;
            padding: 16px 14px 18px;
            color: black;
            background-color: #6D28D9;
            height: 48px;
            margin: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
        }
        .pagination {
            position: fixed;
            bottom: 60px;
            left: 50%;
            transform: translateX(-50%);
            margin: 0;
        }
        .search-bar{
            position: absolute;
            top: 8px;
            right:16px;
            float: right;
            text-align: right;
        }
        .title{
            text-align: center;
            vertical-align: center;
        }
        .festival-card {
            background: rgba(255, 255, 255, 0.85);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            height: 100%;
            text-align: center;
        }
        .festival-card a {
            text-decoration: none !important;
            font-weight: bold !important;
            color: inherit;
            font-size: 1.2rem;
        }

        .festival-grid {
            padding:20px;
            margin-top:20px;
        }
    </style>
{% endblock %}

{% block body %}
    <body class="body">
    <h1 class="title">Festivals</h1>

    {% if festivals is not empty %}
        <div class="container festival-grid">
            <div class="row">
                {% for festival in festivals %}
                    <div class="col-md-4 mb-4">
                        <div class="festival-card">
                            <a href="{{ path('app_festival_show', {id: festival.id}) }}">
                                {{ festival.nume }}
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <nav aria-label="paginationStyle">
            <ul class="pagination justify-content-center">
                {% if pagination.currentPageNumber > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_festival_index', {'page': pagination.currentPageNumber - 1}) }}">Previous</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                {% endif %}

                {% for i in 1..pagination.pageCount %}
                    <li class="page-item {% if i == pagination.currentPageNumber %}active{% endif %}">
                        <a class="page-link" href="{{ path('app_festival_index', {'page': i}) }}">{{ i }}</a>
                    </li>
                {% endfor %}

                {% if pagination.currentPageNumber < pagination.pageCount %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_festival_index', {'page': pagination.currentPageNumber + 1}) }}">Next</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">Next</span>
                    </li>
                {% endif %}
            </ul>
        </nav>

    {% else %}
        <p>No festival found</p>
    {% endif %}

    <button type="button" class="btn-primary" onclick="window.location.href='{{ path('app_festival_add_new') }}'">Add festival</button>
    </body>
{% endblock %}
