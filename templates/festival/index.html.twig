
<h1>Lista Festivaluri</h1>

{% if festivals is not empty %}
    <ul>

        {% for festival in festivals %}
            <li>
                <a href="{{ path('app_festival_show', {id: festival.id}) }}">
                    {{ festival.nume }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% else %}

    <p>No festival found</p>
{% endif %}


<button type="button" class="btn btn-success" onclick="window.location.href='{{ path('app_festival_add_new') }}'">Add festival</button>








