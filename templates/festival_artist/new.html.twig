{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Quicksand', sans-serif;
            background-image: url("https://i.pinimg.com/736x/c6/f6/91/c6f691da74c3b637435b1e14099edc49.jpg");
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;
        }
        .form-container {
            max-width: 600px;
            margin: 60px auto;
            background: white;
            border-radius: 25px;
            padding: 40px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }
        .form-header {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
            font-weight: 700;
        }
        .form-group {
            margin-bottom: 20px;
        }
        label {
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
        }
        select.form-control {
            height: 45px;
        }
        .btn-primary {
            background-color: #6D28D9;
            border: none;
            padding: 10px 20px;
            font-weight: 600;
        }
        .btn-primary:hover {
            background-color: #5b21b6;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <h1 class="form-header">Add Artist to Festival</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="form-group">
            <label for="{{ form.festival.vars.id }}">Festival</label>
            {{ form_widget(form.festival, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.festival) }}
        </div>

        <div class="form-group">
            <label for="{{ form.artist.vars.id }}">Artist</label>
            {{ form_widget(form.artist, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.artist) }}
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3">Save</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
